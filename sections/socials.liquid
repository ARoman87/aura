<div class="md:py-20 py-10">
  <div class="container">Social Media Section</div>
  <div class="w-full overflow-hiddenpy-8">
    <div class="marquee-container">
      <div class="marquee-content">
        {% for block in section.blocks %}
          {% if block.type == 'image' %}
            <div class="flex-shrink-0 mx-4">
              {% if block.settings.image %}
                <img
                  src="{{ block.settings.image | img_url: '440x440' }}"
                  alt="{{ block.settings.image.alt | default: 'Carousel Image' }}"
                  class="w-[440px] h-[440px] object-cover rounded-lg shadow-md"
                  loading="lazy"
                >
              {% else %}
                <div class="w-[440px] h-[440px] bg-gray-200 rounded-lg flex items-center justify-center">
                  <span class="text-gray-500">No Image</span>
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
        <!-- Duplicate content for seamless loop -->
        {% for block in section.blocks %}
          {% if block.type == 'image' %}
            <div class="flex-shrink-0 mx-4">
              {% if block.settings.image %}
                <img
                  src="{{ block.settings.image | img_url: '440x440' }}"
                  alt="{{ block.settings.image.alt | default: 'Carousel Image' }}"
                  class="w-[440px] h-[440px] object-cover rounded-lg shadow-md"
                  loading="lazy"
                >
              {% else %}
                <div class="w-[440px] h-[440px] bg-gray-200 rounded-lg flex items-center justify-center">
                  <span class="text-gray-500">No Image</span>
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Marquee Carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Image Carousel"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Carousel Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee Carousel",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
