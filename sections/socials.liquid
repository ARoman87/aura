<div class="md:py-20 py-10">
  <div class="container">
    <div class="flex justify-center pb-10 md:pb-20">
      <div class="title-main flex gap-1.5 items-center ">
        <a
          href="https://www.instagram.com/auracreationsmarketing"
          class="hover:-translate-y-0.5 hover:text-primary transition-all"
          target="_blank"
          >Instagram</a
        >
        <span>|</span>
        <a
          href="https://www.facebook.com/profile.php?id=61566580146879"
          class="hover:-translate-y-0.5 hover:text-primary transition-all"
          target="_blank"
          >Facebook</a
        >
        <span>|</span>
        <a
          href="https://www.tiktok.com/@auracreationsmarketing"
          class="hover:-translate-y-0.5 hover:text-primary transition-all"
          target="_blank"
          >TikTok</a
        >
        <span>|</span>
        <a
          href="https://www.linkedin.com/company/aura-creations-marketing/"
          class="hover:-translate-y-0.5 hover:text-primary transition-all"
          target="_blank"
          >LinkedIn</a
        >
        <span>|</span>
        <a
          href="https://www.youtube.com/channel/UCak-HiDtnCxLYir5NcLYS8g"
          class="hover:-translate-y-0.5 hover:text-primary transition-all"
          target="_blank"
          >YouTube</a
        >
      </div>
    </div>
  </div>
  <div class="max-w-[1800px] mx-auto">
    <div class="w-full overflow-hidden md:py-8">
      <div class="marquee-container">
        <div class="marquee-content">
          {% for block in section.blocks %}
            {% if block.type == 'image' %}
              <div class="flex-shrink-0 mx-2">
                {% if block.settings.image %}
                  <a href="{{ block.settings.link | default: 'https://www.instagram.com/auracreationsmarketing' }}" target="_blank">
                    <img
                      src="{{ block.settings.image | img_url: 'grande' }}"
                      alt="{{ block.settings.image.alt | default: 'Carousel Image' }}"
                      class="w-[200px] md:w-[400px] h-[200px] md:h-[400px] object-cover shadow-md"
                      loading="lazy"
                    >
                  </a>
                {% else %}
                  <div class="w-[200px] md:w-[400px] h-[200px] md:h-[400px] bg-gray-200 flex items-center justify-center">
                    <span class="text-gray-500">No Image</span>
                  </div>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
          <!-- Duplicate content for seamless loop -->
          {% for block in section.blocks %}
            {% if block.type == 'image' %}
              <div class="flex-shrink-0 mx-2">
                {% if block.settings.image %}
                  <a href="{{ block.settings.link | default: 'https://www.instagram.com/auracreationsmarketing' }}" target="_blank">
                    <img
                      src="{{ block.settings.image | img_url: 'grande' }}"
                      alt="{{ block.settings.image.alt | default: 'Carousel Image' }}"
                      class="w-[200px] md:w-[400px] h-[200px] md:h-[400px] object-cover shadow-md"
                      loading="lazy"
                    >
                  </a>
                {% else %}
                  <div class="w-[200px] md:w-[400px] h-[200px] md:h-[400px] bg-gray-200 flex items-center justify-center">
                    <span class="text-gray-500">No Image</span>
                  </div>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Marquee Carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Image Carousel"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Carousel Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Image Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Marquee Carousel",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
