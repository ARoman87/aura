<div class="relative hover:scale-[1.02] transition-all duration-300">
  <span class="absolute top-0 left-0 w-5 h-5 border-t-1 border-l-1 border-primary z-20"></span>
  <span class="absolute bottom-0 left-0 w-5 h-5 border-b-1 border-l-1 border-primary z-20"></span>
  <span class="absolute bottom-0 right-0 w-5 h-5 border-b-1 border-r-1 border-primary z-20"></span>
  <span class="absolute top-0 right-0 w-5 h-5 border-t-1 border-r-1 border-primary z-20"></span>
  <div class="bg-white/5 hover:bg-white/10 transition-all duration-300 p-6 h-[200px] md:h-[300px] w-full">
    <div class="h-full flex flex-col justify-between">
      <p class="text-primary text-2xl md:text-3xl"><i class="fa-regular {{ icon }}"></i></p>
      <div class="flex flex-col gap-4">
        <h3 class="text-xl md:text-2xl title-main">{{ title }}</h3>
        <p class="md:text-lg text-sm text-white/70">{{ description }}</p>
      </div>
    </div>
  </div>
</div>
