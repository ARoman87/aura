<div class="relative hover:scale-[1.02] transition-all duration-300">
  <span class="absolute top-0 left-0 w-5 h-5 border-t-1 border-l-1 border-primary z-20"></span>
  <span class="absolute bottom-0 left-0 w-5 h-5 border-b-1 border-l-1 border-primary z-20"></span>
  <span class="absolute bottom-0 right-0 w-5 h-5 border-b-1 border-r-1 border-primary z-20"></span>
  <span class="absolute top-0 right-0 w-5 h-5 border-t-1 border-r-1 border-primary z-20"></span>
  <div class="bg-white/5 hover:bg-white/10 transition-all duration-300 py-4 md:py-10 px-6 md:px-12 w-full">
    <div class="h-full flex flex-col justify-between">
      <div class="flex flex-col gap-4 md:gap-8">
        <h3 class="md:text-2xl title-main">{{ title }}</h3>
        <div class="flex gap-6 md:items-center md:flex-row flex-col">
          <div class="flex gap-4 flex-shrink-0">
            <img src="{{ 'aura-logo-color.png' | asset_url }}" alt="Aura Logo in Color" class="w-5 h-auto">
            <img src="{{ 'lp-logo-white.png' | asset_url }}" alt="LP Logo in White" class="w-5 h-auto">
          </div>
          <p class="text-white/70 md:text-base text-xs">{{ description }}</p>
        </div>
      </div>
    </div>
  </div>
</div>
