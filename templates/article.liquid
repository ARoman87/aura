{% layout 'theme' %}

<div class="py-20 md:py-40">
  <div class="container ">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-2xl md:text-5xl font-bold md:mb-10 mb-5">{{ article.title }}</h1>

      {% if article.image %}
        <div class="h-[600px] w-full overflow-hidden rounded-lg mb-5">
          <img src="{{ article.image | img_url: 'grande' }}" alt="{{ article.title }}" class="w-full h-full object-cover">
        </div>
      {% endif %}
      <div class="flex justify-end">
        <p class="text-xs md:text-sm mb-5 md:mb-10">{{ article.published_at | date: '%B %d, %Y' }}</p>
      </div>

      <div class="prose prose-invert max-w-none">
        {{ article.content }}
      </div>
    </div>
  </div>
</div>
