{% assign blog = blogs.news %}
<div>
  {% section 'blogs-hero' %}
  <div class="container md:pb-20 pb-10">
    <div class="pt-10 md:pt-20 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for article in blog.articles %}
        <div class="flex flex-col gap-2 md:mb-10">
          <a href="{{ article.url }}" class="h-[300px] md:h-[400px] w-full overflow-hidden bg-white">
            <img
              src="{{ article.image | img_url: 'grande' }}"
              alt="{{ article.title }}"
              class="w-full h-full object-cover  hover:scale-105 transition-all ease-in-out duration-300"
            >
          </a>
          <a href="{{ article.url }}" class="text-lg md:text-xl title-main hover:underline">
            {{- article.title -}}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
  {% section 'cta' %}
</div>
